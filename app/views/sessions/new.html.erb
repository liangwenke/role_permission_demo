<% form_tag session_path, :class => 'form login' do -%>
  <div class="group wat-cf">
    <div class="right">
      Login/Password: technology/123456
    </div>
  </div>
  <div class="group wat-cf">
    <div class="left">
      <label class="label right">Login</label>
    </div>
    <div class="right">
      <%= text_field_tag :name %>
    </div>
  </div>
  <div class="group wat-cf">
    <div class="left">
      <label class="label right">Password</label>
    </div>
    <div class="right">
      <%= password_field_tag :password %>
    </div>
  </div>
  <div class="group navform wat-cf">
    <div class="right">
      <button class="button" type="submit">
        <img src="/images/web-app-theme/key.png" alt="Save" /> Login
      </button>
    </div>
  </div>
<% end -%>
