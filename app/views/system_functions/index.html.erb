<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", system_functions_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_system_function_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> SysFunctions</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>
            <%= t("activerecord.models.system_module", :default => t("activerecord.models.system_module", :default => "Module")) %>
          </th>
          <th>
            <%= t("activerecord.attributes.admin.name", :default => t("activerecord.labels.name", :default => "Name")) %>
          </th>
          <th>
            <%= t("activerecord.attributes.system_module.descrition", :default => t("activerecord.labels.descrition", :default => "Descrition")) %>
          </th>
          <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @system_functions.each do |system_function| -%>
          <tr class="<%= cycle("odd", "even") %>">
            <td>
              <%= system_function.id %>
            </td>
            <td>
              <%= link_to system_function.system_module, system_module_path(system_function.system_module_id) %>
            </td>
            <td>
              <%= system_function.name %>
            </td>
            <td>
              <%= system_function.description %>
            </td>
            <td>
              <%= system_function.created_at %>
            </td>
            <td class="last">
              <%= link_to "#{t("web-app-theme.show", :default => "Permissions")}", system_function_permissions_path(system_function) %> |
              <%= link_to "#{t("web-app-theme.show", :default => "Show")}", system_function_path(system_function) %> |
              <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_system_function_path(system_function) %> |
              <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", system_function_path(system_function), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
            </td>
          </tr>
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>

        <%= will_paginate @system_functions %>

      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'shared/sidebar') -%>
