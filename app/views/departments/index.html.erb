<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", departments_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_department_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Departments</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
          <th>
            <%= t("activerecord.attributes.department.name", :default => t("activerecord.labels.name", :default => "Name")) %>
          </th>
          <th>
            <%= t("activerecord.attributes.admin.descrition", :default => t("activerecord.labels.descrition", :default => "Descrition")) %>
          </th>
          <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @departments.each do |department| -%>
          <tr class="<%= cycle("odd", "even") %>">
            <td>
              <%= department.id %>
            </td>
            <td>
              <%= link_to department.name, department_path(department) %>
            </td>
            <td>
              <%= department.description %>
            </td>
            <td>
              <%= department.created_at %>
            </td>
            <td class="last">
              <%= link_to "#{t("web-app-theme.show", :default => "Admins")}", department_admins_path(department) %> |
              <%= link_to "#{t("web-app-theme.show", :default => "Show")}", department_path(department) %> |
              <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_department_path(department) %> |
              <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", department_path(department), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
            </td>
          </tr>
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>

      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'shared/sidebar') -%>
