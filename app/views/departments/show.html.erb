<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", departments_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_department_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", department_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.department.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @department.name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.department.description", :default => t("activerecord.labels.description", :default => "Description")) %>:</b>
          <%= @department.description %>
        </p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_department_path(@department), :class => "button" %> 
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", department_path(@department), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'shared/sidebar') -%>
