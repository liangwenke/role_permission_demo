<div class="columns wat-cf">
  <div class="column left">
    <div class="group">
      <%= f.label :name, t("activerecord.attributes.admin.name", :default => "Name"), :class => :label %>
      <%= f.text_field :name, :class => 'text_field' %>
      <span class="description">Ex: a simple text</span>
    </div>

    <div class="group">
      <%= f.label :password, t("activerecord.attributes.admin.password", :default => "Password"), :class => :label %>
      <%= f.text_field :password, :class => 'text_field' %>
      <span class="description">Ex: a simple text</span>
    </div>

    <div class="group">
      <%= f.label :description, t("activerecord.attributes.admin.description", :default => "Description"), :class => :label %>
      <%= f.text_area :description, :rows => 3, :class => 'text_area' %>
      <span class="description">Ex: a simple text</span>
    </div>
  </div>

  <div class="column right">
    <div class="group">
      <%= f.label :department_id, t("activerecord.attributes.admin.department_id", :default => "Department"), :class => :label %>
      <%= f.collection_select :department_id, Department.all, :id, :name, :class => 'select' %>
      <span class="description">Ex: a simple text</span>
    </div>
    
    <div class="group" id="roles">
      <%#= f.label :roles, t("activerecord.attributes.role.name", :default => "Roles"), :class => :label %>
      <label class="label"><input type="checkbox" class="checkbox toggles" /><%= t("activerecord.attributes.role.name", :default => "Roles") %></label>
      <% Role.all.each do |role| -%>
      <div>
        <label><%= check_box_tag 'admin[role_ids][]', role.id, @admin.roles.include?(role), :class => 'checkbox' %><%= role.name %></label>
      </div>
      <% end -%>
      <label class="label"><%= hidden_field_tag 'admin[role_ids][]', '' %></label>
      <span class="description">Ex: a simple text</span>
    </div>
  </div>
</div> 
      
<div class="group navform wat-cf">
  <button class="button" type="submit">
    <%= image_tag("web-app-theme/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}") %> <%= t("web-app-theme.save", :default => "Save") %>
  </button>  
  <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.cancel", :default => "Cancel")}")} #{t("web-app-theme.cancel", :default => "Cancel")}", admins_path, :class => "button" %> 
</div>
