<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", admins_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Admins</h2>
    <div class="inner">
      <table class="table">
        <tr>     
          <th class="first"><input type="checkbox" class="checkbox toggle" /></th>        
          <th>ID</th>
          <th>
            <%= t("activerecord.attributes.admin.name", :default => t("activerecord.labels.name", :default => "Name")) %>
          </th>
          <th>
            <%= t("activerecord.attributes.admin.department_id", :default => t("activerecord.labels.department_id", :default => "Department")) %>
          </th>
          <th>
            <%= t("activerecord.attributes.admin.descrition", :default => t("activerecord.labels.descrition", :default => "Descrition")) %>
          </th>
          <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @admins.each do |admin| -%>
          <tr class="<%= cycle("odd", "even") %>">
            <td><input type="checkbox" class="checkbox" name="id" value="1" /></td>
            <td>
              <%= admin.id %>
            </td>
            <td>
              <%= link_to admin.name, admin_path(admin) %>
            </td>
            <td>
              <%= link_to admin.department, department_path(admin.department_id) %>
            </td>
            <td>
              <%= admin.description %>
            </td>
            <td>
              <%= admin.created_at %>
            </td>
            <td class="last">
              <%= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_path(admin) %> |
              <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_path(admin) %> |
              <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_path(admin), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
            </td>
          </tr>
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
          <button class="button" type="submit">
            <img src="/images/web-app-theme/cross.png" alt="Delete" /> Delete
          </button>
        </div>

        <%= will_paginate @admins %>

      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'shared/admin_sidebar') -%>
